#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import effect kivy.uix.effectwidget.EffectWidget
#: import ak asynckivy
#: import NoTransition kivy.uix.screenmanager.NoTransition


<MainScreenView>:
    id: main_screen
    content_manager: content_manager

    FitImage:
        id: image
        source: "assets/images/abstract_picture.jpg"

    VerticalLabel:
        text: "СОСТАВИТЕЛЬ РАСПИСАНИЯ"
        pos_hint: {"center_y": .5}
        adaptive_size: True
        x: root.width - (self.width - sp(292))

    MDBoxLayout:
        adaptive_height: True
        pos_hint: {"top": 1}
        padding: "60dp", "6dp", "60dp", 0

        CustomMDFlatButton:
            text: "[b]СЛЕДУЙ ЗА НАМИ[/b]"

        CustomMDIconButton:
            icon: "whatsapp"

        CustomMDIconButton:
            icon: "instagram"

        CustomMDIconButton:
            icon: "youtube"

        CustomMDIconButton:
            icon: "twitter"

        Widget:

        Widget:

        MDBoxLayout:
            adaptive_height: True
            spacing: "24dp"

            CustomMDFlatButton:
                text: "[b]ГЛАВНАЯ[/b]"

            CustomMDFlatButton:
                text: "[b]О ПРИЛОЖЕНИИ[/b]"

            CustomMDFlatButton:
                text: "[b]О НАС[/b]"

    MDAnchorLayout:

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: .80, .80
            spacing: "8dp"

            MDBoxLayout:
                adaptive_height: True
                spacing: "24dp"

                CustomMDFlatButton:
                    text: "[b]СОЗДАТЬ[/b]"
                    text_color: 166/255, 60/255, 82/255, 1
                    font_name: "assets/fonts/MontserratAlternates-ExtraBold.otf"
                    on_release: ak.start(root.controller.create_configuration())

                CustomMDFlatButton:
                    text: "[b]ОТКРЫТЬ[/b]"
                    text_color: 'white'
                    font_name: "assets/fonts/MontserratAlternates-ExtraBold.otf"

                CustomMDFlatButton:
                    text: "[b]СОХРАНИТЬ[/b]"
                    text_color: 'white'
                    font_name: "assets/fonts/MontserratAlternates-ExtraBold.otf"

                CustomMDFlatButton:
                    text: "[b]ЗАКРЫТЬ[/b]"
                    text_color: 'white'
                    font_name: "assets/fonts/MontserratAlternates-ExtraBold.otf"
                    on_release: ak.start(root.controller.close_configuration())

            MDCard:
                orientation: 'vertical'

                ScreenManager:
                    id: content_manager
                    main_screen: main_screen
                    transition: NoTransition()
