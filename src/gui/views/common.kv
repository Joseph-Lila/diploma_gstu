<CustomMDLabel@MDLabel>
    font_name: "assets/fonts/MontserratAlternates-Bold.otf"


<MyRectangleFlatIconButton@MDRectangleFlatIconButton>:
    line_color: 0/255, 25/255, 45/255, 1
    font_size: 26
    theme_icon_color: "Custom"
    icon_color: 57/255, 97/255, 133/255, 200/255


<CustomMDFlatButton@MDFlatButton>
    theme_text_color: "Custom"
    pos_hint: {"center_y": .5}
    text_color: 'white'
    font_name: "assets/fonts/MontserratAlternates-Bold.otf"


<CustomMDIconButton@MDIconButton>
    theme_icon_color: "Custom"
    icon_color: 'white'


<TooltipMDIconButton@MDIconButton+MDTooltip>


<EmptyConfigurationElement@MDAnchorLayout>:

    CustomMDLabel:
        text: 'Пусто...'
        halign: 'center'


<SuccessExportDialog@MDCard>:

    MDCard:
        orientation: 'vertical'
        size_hint_x: .3
        md_bg_color: 0, .6, 0, 1
        radius: [15, 0, 0, 15]

        AnchorLayout:

            MDIcon:
                icon: 'check-circle-outline'
                font_size : 48
                color: 'white'

    BoxLayout:
        orientation: "vertical"
        padding: dp(40)

        MDLabel:
            text: "Успешно!"
            size_hint_y: None
            height: self.texture_size[1]
            halign: "center"
            valign: "center"
            bold: True
            theme_text_color: "Custom"
            text_color: 0, .7, 0, 1

        MDLabel:
            text: "Нагрузка преподавателей загружена в файл!"
            halign: "center"
            valign: "top"
            theme_text_color: "Custom"
            text_color: 0, .7, 0, 1
            font_style: "Caption"

        MDFillRoundFlatButton:
            id: button
            text: "Подтвердить"
            md_bg_color: 0, .7, 0, 1
            pos_hint: {"center_x": .5}


