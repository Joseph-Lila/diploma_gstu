#: import get_left_drawer_size src.config.get_left_drawer_size

<HomeScreenView>:
    nav_layout: nav_layout

    on_enter:
        nav_drawer.set_state('open')
        nav_drawer.size_hint = (None, None)
        nav_drawer.size = get_left_drawer_size()

    MDNavigationLayout:
        id: nav_layout

        MDNavigationDrawer:
            id: nav_drawer
            type: 'standard'
            opening_time: 0
            orientation: "vertical"

            MDScreen:
                pos_hint: {"top": .9}

                FitImage:
                    size_hint_y: 1
                    source: 'assets/images/wallhaven-3z91ey.jpg'

                Image:
                    source: 'assets/icons/Rasp.png'
                    mipmap: True
                    size_hint_x: 1.3
                    pos_hint: {"center_x": .5, "center_y": .93}

                MDBoxLayout:
                    orientation: 'vertical'
                    pos_hint: {"top": 1.55}

                    OneLineAvatarListItem:
                        id: main_list_item
                        text: "Главная"
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                        font_size: 40
                        valign: 'bottom'
                        bg_color: (92/255, 0/255, 115/255, 1)
                        on_release:
                            main_list_item.bg_color = (92/255, 0/255, 115/255, 1)
                            create_list_item.bg_color = (1, 1, 1, 0)
                            open_list_item.bg_color = (1, 1, 1, 0)

                        ImageLeftWidget:
                            size_hint: None, None
                            size: 30, 30

                            pos_hint: {"top": 1}
                            halign: 'right'
                            source: "assets/icons/house.png"


                    OneLineAvatarListItem:
                        id: create_list_item
                        text: "Создать"
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                        font_size: 40
                        valign: 'bottom'
                        on_release:
                            main_list_item.bg_color = (1, 1, 1, 0)
                            create_list_item.bg_color = (92/255, 0/255, 115/255, 1)
                            open_list_item.bg_color = (1, 1, 1, 0)


                        ImageLeftWidget:
                            size_hint: None, None
                            size: 30, 30

                            pos_hint: {"top": 1}
                            halign: 'right'
                            source: "assets/icons/create.png"

                    OneLineAvatarListItem:
                        id: open_list_item
                        text: "Открыть"
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                        font_size: 40
                        valign: 'bottom'
                        on_release:
                            main_list_item.bg_color = (1, 1, 1, 0)
                            create_list_item.bg_color = (1, 1, 1, 0)
                            open_list_item.bg_color = (92/255, 0/255, 115/255, 1)

                        ImageLeftWidget:
                            size_hint: None, None
                            size: 30, 30

                            pos_hint: {"top": 1}
                            halign: 'right'
                            source: "assets/icons/open-file.png"

                MDBoxLayout:
                    adaptive_height: True
                    orientation: 'vertical'
                    pos_hint: {"center_y": .14}
                    padding: 11, 0, 0, 0

                    BoxLayout:
                        orientation: 'vertical'

                        MDLabel:
                            text: 'О нас...'
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1
                            font_size: 15

                        MDLabel:
                            text: 'О приложении'
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1
                            font_size: 15

                    MDLabel:
                        text: 'Следуй за нами:'
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                        font_size: 20

                    BoxLayout:
                        padding: 0, 5, 20, 0
                        spacing: 7

                        MDIcon:
                            icon: 'assets/icons/free-icon-font-whatsapp.png'
                            pos_hint: {"center_x": .5, "center_y": .5}

                        MDIcon:
                            icon: 'assets/icons/free-icon-font-twitter.png'
                            pos_hint: {"center_x": .5, "center_y": .5}

                        MDIcon:
                            icon: 'assets/icons/free-icon-font-instagram.png'
                            pos_hint: {"center_x": .5, "center_y": .5}

                        MDIcon:
                            icon: 'assets/icons/free-icon-font-youtube.png'
                            pos_hint: {"center_x": .5, "center_y": .5}

                        MDIcon:
                            icon: 'assets/icons/free-icon-font-telegram.png'
                            pos_hint: {"center_x": .5, "center_y": .5}
