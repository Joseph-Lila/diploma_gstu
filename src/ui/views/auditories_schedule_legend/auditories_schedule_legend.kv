<AuditoriesScheduleLegend>:
    spacing: 10

    BoxLayout:
        orientation: 'vertical'
        spacing: 10

        AnchorLayout:

            ClickableTextFieldRound:
                id: department
                text: 'Факультет'
                size_hint_x: 1
                left_icon: 'assets/images/icons8-отдел-96.png'
                right_icon: 'assets/images/icons8-вниз-в-квадрате-96 1.png'

        AnchorLayout:

            MDTextField:
                hint_text: 'Начните вводить номер аудитории'

    BoxLayout:
        orientation: 'vertical'
        size_hint_x: .2

        MDIconButton:
            icon: 'assets/images/icons8-google-поиск 1.png'
            icon_size: "30sp"
            pos_hint: {"center_x": .5, "center_y": .5}
            theme_text_color: "Hint"

        MDIconButton:
            icon: 'assets/images/icons8-очистить-фильтры-96.png'
            icon_size: "30sp"
            pos_hint: {"center_x": .5, "center_y": .5}
            theme_text_color: "Hint"
