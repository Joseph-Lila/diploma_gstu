<WorkloadArea>:
    orientation: 'vertical'
    padding: 7
    spacing: 7

    Widget:
        size_hint_y: .194

    BoxLayout:
        orientation: 'vertical'

        Label:
            size_hint_y: .17
            color: 'black'
            text: 'Результаты поиска'
            font_name: 'assets/fonts/Montserrat/static/Montserrat-Italic.ttf'
            valign: 'center'
            font_size: 25

        MDRecycleView:
            id: recycle_cont

            viewclass: 'ThreeLineListItem'
            key_viewclass: 'viewclass'
            pos_hint: {"center_x": .5, "center_y": .5}

            MDRecycleGridLayout:
                default_size_hint: 1, None
                adaptive_height: True
                cols: 1

    MDBoxLayout:
        size_hint_y: None
        height: 0

        WorkloadAreaLegend:
            schedule_view: root