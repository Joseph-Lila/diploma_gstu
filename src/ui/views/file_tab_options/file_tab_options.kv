<FileTabOptions>:
    radius: 0, 0, 0, 0
    size_hint: None, None
    size: 200, 200
    md_bg_color: 26 / 255, 25 / 255, 25 / 255, 100 / 100
    auto_dismiss: True
    orientation: 'vertical'
    overlay_color: 1, 1, 1, 0
    padding: 20, 10, 20, 10
    spacing: 5
    pos_hint: {'top': .93, 'right': .13}

    MDTextButton:
        id: create_btn

        text: "Создать"
        font_name: 'assets/fonts/Montserrat/static/Montserrat-Regular.ttf'
        pos_hint: {"center_y": .5}
        color: "white"

    MDTextButton:
        id: open_btn

        text: "Открыть"
        font_name: 'assets/fonts/Montserrat/static/Montserrat-Regular.ttf'
        pos_hint: {"center_y": .5}
        color: "white"

    MDTextButton:
        id: save_btn

        text: "Сохранить"
        font_name: 'assets/fonts/Montserrat/static/Montserrat-Regular.ttf'
        pos_hint: {"center_y": .5}
        color: "white"

    MDTextButton:
        id: delete_btn

        text: "Удалить"
        font_name: 'assets/fonts/Montserrat/static/Montserrat-Regular.ttf'
        pos_hint: {"center_y": .5}
        color: "white"

    MDSeparator:
        orientation: 'horizontal'
        color: 'white'

    MDTextButton:
        id: autocomplete_btn

        text: "Автозаполнение"
        font_name: 'assets/fonts/Montserrat/static/Montserrat-Regular.ttf'
        pos_hint: {"center_y": .5}
        color: "white"

    MDTextButton:
        id: get_pdf_btn

        text: "Получить PDF"
        font_name: 'assets/fonts/Montserrat/static/Montserrat-Regular.ttf'
        pos_hint: {"center_y": .5}
        color: "white"

    MDSeparator:
        orientation: 'horizontal'
        color: 'white'

    MDTextButton:
        id: close_btn

        text: "Закрыть"
        font_name: 'assets/fonts/Montserrat/static/Montserrat-Regular.ttf'
        pos_hint: {"center_y": .5}
        color: "white"
