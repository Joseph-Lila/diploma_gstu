#: import MenuHeader src.ui.views.schedule_cell_context_menu.menu_header.MenuHeader

<ScheduleCellContextMenu>:
    radius: 0, 0, 0, 0
    size_hint: None, None
    size: 300, 130
    md_bg_color: 26 / 255, 25 / 255, 25 / 255, 100 / 100
    auto_dismiss: True
    orientation: 'vertical'
    overlay_color: 1, 1, 1, 0
    padding: 20, 10, 20, 10
    spacing: 10
    tune_btn_event: print
    clear_btn_event: print
    pos_hint: {"x": root.pos_hint_x, "y": root.pos_hint_y}

    MenuHeader:

    MDTextButton:
        id: tune_btn

        text: "Настроить компоновку"
        font_name: 'assets/fonts/Montserrat/static/Montserrat-Regular.ttf'
        pos_hint: {"center_y": .5}
        color: "white"
        disabled_color: "grey"
        on_press: root.tune_btn_event()

    MDSeparator:
        orientation: 'horizontal'
        color: 'white'

    MDTextButton:
        id: clear_btn

        text: "Очистить ячейку"
        font_name: 'assets/fonts/Montserrat/static/Montserrat-Regular.ttf'
        pos_hint: {"center_y": .5}
        color: "white"
        disabled_color: "grey"
        on_press: root.clear_btn_event()