#: import SubjectColor src.domain.enums.SubjectColor


<GroupsScheduleLegend>:
    orientation: 'vertical'

    spacing: 10

    MDFloatLayout:

        MDBoxLayout:
            pos: 10, 610

            Widget:

            BoxLayout:
                orientation: 'vertical'
                size_hint_x: .23

                MDIconButton:
                    icon: 'assets/images/icons8-google-поиск 1.png'
                    icon_size: "30sp"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    theme_text_color: "Hint"
                    on_press: root.send_command_to_get_group_titles_depending_on_faculty()

                Widget:
                    size_hint_y: None
                    height: 10

                MDIconButton:
                    icon: 'assets/images/icons8-очистить-фильтры-96.png'
                    icon_size: "30sp"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    theme_text_color: "Hint"
                    on_press: root.clear_results()

            MDCard:
                size_hint_x: .5
                size_hint_y: None
                height: 118
                style: 'outlined'
                md_bg_color: 255 / 255, 85 / 255, 126 / 255, 50 / 100
                padding: 10
                line_color: 'silver'

                GridLayout:
                    cols: 2

                    AnchorLayout:
                        size_hint_x: .3

                        MDSeparator:
                            orientation: 'horizontal'
                            color: SubjectColor.LECTURE.value
                            pos_hint: {"center_x": .5, "center_y": .5}
                            height: "3dp"

                    Label:
                        text: 'Лекции'
                        color: 'black'
                        halign: 'center'
                        valign: 'center'

                    AnchorLayout:
                        size_hint_x: .3

                        MDSeparator:
                            orientation: 'horizontal'
                            color: SubjectColor.PRACTISE.value
                            pos_hint: {"center_x": .5, "center_y": .5}
                            height: "3dp"

                    Label:
                        text: 'Практические'
                        color: 'black'
                        halign: 'center'
                        valign: 'center'

                    AnchorLayout:
                        size_hint_x: .3

                        MDSeparator:
                            orientation: 'horizontal'
                            color: SubjectColor.LAB.value
                            pos_hint: {"center_x": .5, "center_y": .5}
                            height: "3dp"

                    Label:
                        text: 'Лабораторные'
                        color: 'black'
                        halign: 'center'
                        valign: 'center'

    MDBoxLayout:
        size_hint_y: None
        orientation: 'vertical'
        size_hint_x: .6
        height: 0
        pos_hint: {"top": 1}

        MDFloatLayout:

            AutoCompleteTextField:
                id: group

                request_method: root.send_command_to_get_groups_titles_depending_on_faculty

                recycle_view_height: 100
                hint_text: root.group_hint_text
                total_width: 420
                pos: 0, 610

        MDFloatLayout:

            AutoCompleteTextField:
                id: faculty

                change_text_request: root.clear_group_selector_value
                request_method: root.send_command_to_get_faculties_values

                recycle_view_height: 100
                hint_text: root.faculty_hint_text
                total_width: 420
                pos: 0, 676
