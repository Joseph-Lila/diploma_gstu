<WorkloadAreaLegend>:
    orientation: 'vertical'

    spacing: 10

    MDFloatLayout:

        MDBoxLayout:
            pos: 10, 620

            Widget:

            MDBoxLayout:
                orientation: 'vertical'
                size_hint_x: .1

                MDIconButton:
                    icon: 'assets/images/icons8-google-поиск 1.png'
                    icon_size: "30sp"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    theme_text_color: "Hint"
                    on_press: root.send_command_to_get_workload_data()

                MDIconButton:
                    icon: 'assets/images/icons8-очистить-фильтры-96.png'
                    icon_size: "30sp"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    theme_text_color: "Hint"
                    on_press: root.clear_filters()

    MDBoxLayout:
        size_hint_y: None
        orientation: 'vertical'
        size_hint_x: .9
        height: 0
        pos_hint: {"top": 1}

        MDFloatLayout:

            AutoCompleteTextField:
                id: subject

                request_method: root.send_command_to_get_subjects_titles

                recycle_view_height: 100
                hint_text: root.subject_hint_text
                total_width: 320
                pos: -160, 620

        MDFloatLayout:

            AutoCompleteTextField:
                id: subject_type

                request_method: root.send_command_to_get_subject_types_titles

                recycle_view_height: 100
                hint_text: root.subject_type_hint_text
                total_width: 320
                pos: 180, 620

        MDFloatLayout:

            AutoCompleteTextField:
                id: mentor

                request_method: root.send_command_to_get_mentors_fios

                recycle_view_height: 100
                hint_text: root.mentor_hint_text
                total_width: 320
                pos: -160, 676

        MDFloatLayout:

            AutoCompleteTextField:
                id: group

                request_method: root.send_command_to_get_groups_titles

                recycle_view_height: 100
                hint_text: root.group_hint_text
                total_width: 320
                pos: 180, 676