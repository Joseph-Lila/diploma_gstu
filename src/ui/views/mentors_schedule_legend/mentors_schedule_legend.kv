<MentorsScheduleLegend>:
    orientation: 'vertical'

    spacing: 10

    MDFloatLayout:

        MDBoxLayout:
            pos: 10, 620

            Widget:

            BoxLayout:
                orientation: 'vertical'
                size_hint_x: .23

                MDIconButton:
                    icon: 'assets/images/icons8-google-поиск 1.png'
                    icon_size: "30sp"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    theme_text_color: "Hint"
                    on_press: root.send_command_to_get_mentor_fios_depending_on_department()

                MDIconButton:
                    icon: 'assets/images/icons8-очистить-фильтры-96.png'
                    icon_size: "30sp"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    theme_text_color: "Hint"
                    on_press: root.clear_filters()

            MDCard:
                size_hint_x: .5
                size_hint_y: None
                height: 108
                style: 'outlined'
                md_bg_color: 255 / 255, 85 / 255, 126 / 255, 50 / 100
                padding: 10
                line_color: 'silver'

                GridLayout:
                    cols: 2

                    AnchorLayout:
                        size_hint_x: .3

                        MDSeparator:
                            orientation: 'horizontal'
                            color: 'red'
                            pos_hint: {"center_x": .5, "center_y": .5}
                            height: "3dp"

                    Label:
                        text: 'Лекции'
                        color: 'black'
                        halign: 'center'
                        valign: 'center'

                    AnchorLayout:
                        size_hint_x: .3

                        MDSeparator:
                            orientation: 'horizontal'
                            color: 'green'
                            pos_hint: {"center_x": .5, "center_y": .5}
                            height: "3dp"

                    Label:
                        text: 'Практические'
                        color: 'black'
                        halign: 'center'
                        valign: 'center'

                    AnchorLayout:
                        size_hint_x: .3

                        MDSeparator:
                            orientation: 'horizontal'
                            color: 'blue'
                            pos_hint: {"center_x": .5, "center_y": .5}
                            height: "3dp"

                    Label:
                        text: 'Лабораторные'
                        color: 'black'
                        halign: 'center'
                        valign: 'center'

    MDBoxLayout:
        size_hint_y: None
        orientation: 'vertical'
        size_hint_x: .6
        height: 0
        pos_hint: {"top": 1}

        MDFloatLayout:

            AutoCompleteTextField:
                id: mentor

                request_method: root.send_command_to_get_mentors_titles_depending_on_department

                recycle_view_height: 100
                hint_text: root.mentor_hint_text
                total_width: 420
                pos: 0, 620

        MDFloatLayout:

            AutoCompleteTextField:
                id: department

                change_text_request: root.clear_mentor_selector_value
                request_method: root.send_command_to_get_departments_values

                recycle_view_height: 100
                hint_text: root.department_hint_text
                total_width: 420
                pos: 0, 676
