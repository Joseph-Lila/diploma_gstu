<ClickableTextFieldRound>:
    md_bg_color: 185 / 255, 162 / 255, 255 / 255, 100 / 100
    radius: 20, 20, 20, 20
    size_hint: None, None
    width: 300
    height: 50
    style: 'outlined'
    button_instance: right_icon_button
    line_color: 'black'

    MDIconButton:
        id: left_icon_button
        icon: root.left_icon
        icon_size: "42sp"
        disabled: True
        pos_hint: {"center_y": .5}
        theme_text_color: "Hint"

    Label:
        id: text_field
        text: root.text
        text_size: self.size
        font_name: 'assets/fonts/Montserrat/static/Montserrat-MediumItalic.ttf'
        font_size: 20
        color: 'white'
        valign: 'center'
        halign: 'center'

    MDIconButton:
        id: right_icon_button
        icon: root.right_icon
        icon_size: "42sp"
        pos_hint: {"center_y": .5}
        theme_text_color: "Hint"
