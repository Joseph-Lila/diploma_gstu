<ScheduleScreenView>:

    MDBoxLayout:
        orientation: 'vertical'

        MDAnchorLayout:
            size_hint: 1, None
            height: 32

            FitImage:
                source: 'assets/images/background.png'

            MDBoxLayout:

                Widget:
                    size_hint_x: .05

                Label:
                    id: head_label
                    color: 'white'
                    text: 'Расписание занятий весенний семестр 2001-2099 учебный год'
                    font_name: 'assets/fonts/Montserrat/static/Montserrat-Italic.ttf'
                    font_size: 18

                AnchorLayout:
                    size_hint_x: .05

                    MDIconButton:
                        icon: 'assets/images/close_window_icon 1.png'
                        color: 'white'
                        icon_size: "20sp"
                        on_press: app.stop()

        MDBoxLayout:
            size_hint: 1, None
            height: 28
            md_bg_color: 26 / 255, 25 / 255, 25 / 255, 100 / 100
            padding: 20, 5, 0, 5
            spacing: 20

            MDTextButton:
                id: file_tab

                text: 'Файл'
                color: 'white'
                font_name: 'assets/fonts/Montserrat/static/Montserrat-Regular.ttf'
                font_size: 16
                pos_hint: {"center_y": .5}
                on_press: root.file_tab_options_dialog.open()

            MDSeparator:
                orientation: 'vertical'
                color: 'white'

            MDTextButton:
                text: 'Вид'
                color: 'white'
                font_name: 'assets/fonts/Montserrat/static/Montserrat-Regular.ttf'
                font_size: 16
                pos_hint: {"center_y": .5}

            MDSeparator:
                orientation: 'vertical'
                color: 'white'

            MDTextButton:
                text: 'Специальные параметры'
                color: 'white'
                font_name: 'assets/fonts/Montserrat/static/Montserrat-Regular.ttf'
                font_size: 16
                pos_hint: {"center_y": .5}

        BoxLayout:
            padding: 5
            spacing: 10

            MDCard:
                orientation: 'vertical'
                md_bg_color: 52 / 255, 52 / 255, 52 / 255, 1

                AnchorLayout:
                    size_hint_y: .08

                    MDSegmentedControl:
                        id: first_segm_control

                        md_bg_color: "brown"
                        segment_color: "red"
                        on_active: root.change_schedule_view(*args)

                        MDSegmentedControlItem:
                            text: "Группы"

                        MDSegmentedControlItem:
                            text: "Преподаватели"

                        MDSegmentedControlItem:
                            text: "Аудитории"

                        MDSegmentedControlItem:
                            text: "Нагрузка"

                MDCard:
                    id: first_table

                    md_bg_color: 'pink'

                    MDScreenManager:
                        id: first_scr_mng

                        MDScreen:
                            name: 'groups'

                            GroupsSchedule:

                        MDScreen:
                            name: 'mentors'

                            MentorsSchedule:

                        MDScreen:
                            name: 'auditories'

                            AuditoriesSchedule:

                        MDScreen:
                            name: 'workloads'

                            WorkloadArea:

            MDCard:
                orientation: 'vertical'
                md_bg_color: 52 / 255, 52 / 255, 52 / 255, 1

                AnchorLayout:
                    size_hint_y: .08

                    MDSegmentedControl:
                        id: second_segm_control

                        md_bg_color: "brown"
                        segment_color: "red"
                        on_active: root.change_schedule_view(*args)

                        MDSegmentedControlItem:
                            text: "Группы"

                        MDSegmentedControlItem:
                            text: "Преподаватели"

                        MDSegmentedControlItem:
                            text: "Аудитории"

                        MDSegmentedControlItem:
                            text: "Нагрузка"

                MDCard:
                    id: second_table

                    md_bg_color: 'pink'

                    MDScreenManager:
                        id: second_scr_mng

                        MDScreen:
                            name: 'groups'

                            GroupsSchedule:

                        MDScreen:
                            name: 'mentors'

                            MentorsSchedule:

                        MDScreen:
                            name: 'auditories'

                            AuditoriesSchedule:

                        MDScreen:
                            name: 'workloads'

                            WorkloadArea:
