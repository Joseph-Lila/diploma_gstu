#: import config src.config
#: import AutoCompleteTextField src.ui.views.AutoCompleteTextField


<WorkloadsManagerDialog>:
    size_hint: None, None
    md_bg_color: 238 / 255, 238 / 255, 238 / 255, 1
    size: config.get_big_window_size()
    auto_dismiss: False
    orientation: 'vertical'

    MDAnchorLayout:
        size_hint: 1, None
        height: 40

        FitImage:
            source: 'assets/images/background.png'

        Label:
            color: 'white'
            text: 'Менеджер нагрузки'
            font_name: 'assets/fonts/Montserrat/static/Montserrat-Regular.ttf'
            font_size: 24

    BoxLayout:
        size_hint: 1, None
        height: 80
        padding: 8, 8, 8, 0
        spacing: 10

        MDIconButton:
            icon: 'assets/images/icons8-стрелка-влево-в-круге-2-96 1.png'
            icon_size: "60sp"
            pos_hint: {"center_y": .5}
            theme_text_color: "Hint"
            on_press: root.dismiss()

        MDCard:
            style: 'outlined'
            padding: 30, 0, 0, 0
            radius: 15, 15, 0, 0
            md_bg_color: 'pink'

    BoxLayout:
        size_hint: 1, None
        height: 80
        padding: 8, 0, 8, 8
        spacing: 10

        MDCard:
            style: 'outlined'
            padding: 30, 0, 0, 0
            radius: 15, 0, 15, 15
            md_bg_color: 'pink'

    Button:
        id: add_btn
        text: 'Add'
        on_press: root.add_record()

    MDBoxLayout:
        size_hint_y: None
        height: 0
        pos_hint: {"top": 1}
        padding: 20, 0, 0, 20

        RelativeLayout:

            AutoCompleteTextField:
                id: mentor
                request_method: root.send_command_to_get_mentors_fios
                recycle_view_height: 200
                hint_text: root.mentor_hint
                total_width: 300
                pos: 0, 500

        RelativeLayout:

            AutoCompleteTextField:
                id: group
                request_method: root.send_command_to_get_groups_titles
                recycle_view_height: 200
                hint_text: root.group_hint
                total_width: 200
                pos: -20, 500

        RelativeLayout:

            AutoCompleteTextField:
                id: subject_type
                request_method: root.send_command_to_get_subject_types
                recycle_view_height: 200
                hint_text: root.subject_type_hint
                total_width: 250
                pos: -45, 500

        RelativeLayout:

            AutoCompleteTextField:
                id: subject
                request_method: root.send_command_to_get_subjects
                recycle_view_height: 200
                hint_text: root.subject_hint
                total_width: 300
                pos: -30, 500

    MDBoxLayout:
        size_hint_y: None
        height: 0
        pos_hint: {"top": 1}
        padding: 80, 0, 0, 0

        RelativeLayout:

        RelativeLayout:
            AutoCompleteTextField:
                id: hour
                request_method: root.send_command_to_get_hours
                recycle_view_height: 200
                hint_text: root.hour_hint
                total_width: 200
                pos: 0, 593

        RelativeLayout:
